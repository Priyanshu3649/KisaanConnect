rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read;
    }
    // Allow authenticated users to write to the 'equipment' folder,
    // with a file size limit of 5MB.
    match /equipment/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024;
    }
     // Allow authenticated users to write to their own profile pictures folder
    match /profilePictures/{userId}/{fileName} {
       allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024;
    }
  }
}
