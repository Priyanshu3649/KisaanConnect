
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all images
    match /equipment/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /profilePictures/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
