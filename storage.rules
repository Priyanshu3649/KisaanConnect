
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to upload their own profile picture
    match /profilePictures/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to upload equipment images
    match /equipment/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to all images so they can be displayed in the app
    match /{allPaths=**} {
        allow read;
    }
  }
}
